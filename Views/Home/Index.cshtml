@{
    ViewData["Title"] = "Home Page";
}

@model IEnumerable<MvcApp.Models.Product>

<h1>Ürün Listesi</h1>

<form method="post" asp-action="AddProduct">
    <input type="text" name="name" placeholder="Ürün Adı" required />
    <input type="number" step="0.01" name="price" placeholder="Fiyat" required />
    <button type="submit">Ekle</button>
</form>

<table border="1" cellpadding="5">
    <tr><th>ID</th><th>Ad</th><th>Fiyat</th></tr>
    @foreach (var item in Model)
    {
        <tr><td>@item.Id</td><td>@item.Name</td><td>@item.Price</td></tr>
    }
</table>


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
